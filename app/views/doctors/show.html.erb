<h1><%= @doctor.name %></h1>
<% @appointments.each do |appointment| %>
  <p>Appointment: <%= "#{appointment.appointment_datetime.strftime('%B %d, %Y')} at #{appointment.appointment_datetime.strftime('%H:%M')}" %></p>
  <p>Patient: <%= link_to appointment.patient.name, patient_path(appointment.patient) %></p>
<% end %>
