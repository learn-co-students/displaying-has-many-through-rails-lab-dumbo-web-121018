<h1><%= @patient.name %></h1>
<% @appointments.each do |appointment| %>
  <p>Appointment: <%= "#{appointment.appointment_datetime.strftime('%B %d, %Y')} at #{appointment.appointment_datetime.strftime('%H:%M')}" %></p>
  <p>Doctor: <%= link_to appointment.doctor.name, doctor_path(appointment.doctor) %></p>
<% end %>
